<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/AppImage"
        android:layout_width="130dp"
        android:layout_alignRight="@id/txtCreateAccountLabel"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="127dp"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="127dp"
        android:layout_marginRight="127dp"
        android:gravity="center"
        tools:ignore="RtlCompat"
        tools:srcCompat="@drawable/icons8_task_planning_100"
        android:contentDescription="TODO" />

    <EditText
        android:id="@+id/editTxtUsername"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/AppImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:background="@drawable/radius_corners"
        android:drawableLeft="@drawable/ic_action_login_name_image"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:imeOptions="actionDone"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/editTxtPass"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/editTxtUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:background="@drawable/radius_corners"
        android:drawableLeft="@drawable/ic_action_login_lock"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:imeOptions="actionDone"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxtPass"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="185dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/login_button"
        android:clickable="true"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#dfe9ff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btnCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_below="@+id/txtTaskName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="485dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/login_button"
        android:gravity="center"
        android:onClick="SignIn"
        android:text="Create Account"
        android:textColor="#dfe9ff"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="527dp"
        android:gravity="center"
        android:text="TaskBoss"
        android:textColor="#dfe9ff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCreateAccountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxtPass"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="109dp"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="111dp"
        android:layout_marginRight="111dp"
        android:layout_marginBottom="94dp"
        android:gravity="center"
        android:text="Not on TaskBoss yet?"
        android:textColor="#dfe9ff" />

    <TextView
        android:id="@+id/btnforgotPass"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/editTxtPass"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="210dp"
        android:layout_marginRight="210dp"
        android:background="@drawable/login_button"
        android:gravity="center"
        android:onClick="ForgotPass"
        android:text="Forgot Password?"
        android:textColor="#dfe9ff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/LeftTxtBar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignLeft="@id/txtCreateAccountLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="453dp"
        android:layout_marginEnd="266dp"
        android:layout_marginRight="266dp"
        android:layout_marginBottom="113dp"
        android:background="#dfe9ff"
        android:src="@drawable/line" />

    <ImageView
        android:id="@+id/RightTxtBar"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignRight="@id/txtCreateAccountLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="270dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="453dp"
        android:layout_marginEnd="66dp"
        android:layout_marginRight="66dp"
        android:layout_marginBottom="113dp"
        android:src="@drawable/line" />

</RelativeLayout>