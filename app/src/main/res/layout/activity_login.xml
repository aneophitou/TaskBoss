<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="119dp"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="TaskBoss"
        android:textColor="#dfe9ff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/AppImage"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/txtTitle"
        android:layout_alignRight="@id/txtCreateAccountLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="111dp"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="113dp"
        android:layout_marginRight="112dp"
        android:layout_gravity="center"
        android:gravity="center"
        tools:ignore="RtlCompat"
        tools:srcCompat="@drawable/icons8_task_planning_100" />

    <EditText
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/AppImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:background="@drawable/radius_corners"
        android:drawableLeft="@drawable/ic_action_login_name_image"
        android:ems="10"
        android:hint="Username"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/txtDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="62dp"
        android:background="@drawable/radius_corners"
        android:drawableLeft="@drawable/ic_action_login_lock"
        android:ems="10"
        android:hint="Password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_below="@+id/txtDate"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="205dp"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="65dp"
        android:background="@drawable/login_button"
        android:clickable="true"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#dfe9ff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btnforgotPass"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_below="@+id/txtDate"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/login_button"
        android:onClick="ForgotPass"
        android:text="Forgot Password?"
        android:textAlignment="gravity"
        android:textColor="#dfe9ff"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/LeftTxtBar"
        android:layout_width="32dp"
        android:layout_height="1dp"
        android:layout_below="@+id/btnforgotPass"
        android:layout_alignStart="@+id/txtDescription"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="32dp"
        android:background="#dfe9ff"
        android:src="@drawable/line" />

    <TextView
        android:id="@+id/txtCreateAccountLabel"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="133dp"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        android:text="Not on TaskBoss yet?"
        android:gravity="center"
        android:textColor="#dfe9ff"
        android:textSize="12sp" />


    <ImageView
        android:id="@+id/RightTxtBar"
        android:layout_width="32dp"
        android:layout_height="1dp"
        android:layout_below="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:background="#dfe9ff"
        android:src="@drawable/line" />

    <TextView
        android:id="@+id/btnSendAttedance"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_below="@+id/txtCreateAccountLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/login_button"
        android:gravity="center"
        android:onClick="SignIn"
        android:text="Create Account"
        android:textColor="#dfe9ff"
        android:textSize="23sp"
        android:textStyle="bold" />

</RelativeLayout>