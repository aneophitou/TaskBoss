<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient">

    <android.support.v7.widget.Toolbar
            android:id="@+id/projectBar"
            android:layout_below="@+id/toolbar8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@drawable/event_item_gradient"
            android:gravity="top"
            android:theme="?attr/actionBarTheme">

            <Button

                android:id="@+id/createProjectButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Create Project" />

        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/projectBar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-2dp"
            android:minHeight="?actionBarSize"
            app:tabBackground="@color/colorPrimary"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/TextColor"
            app:tabIndicatorHeight="5dp"
            app:tabMode="fixed"
            app:tabTextColor="@color/TextColor"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp">

        </android.support.design.widget.TabLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/projectBar"
            android:id="@+id/fragmentView"
            android:background="@drawable/bgrepeat">

        </FrameLayout>

</RelativeLayout>