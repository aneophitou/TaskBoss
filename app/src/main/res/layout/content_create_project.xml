<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".create_task"
    android:background="@drawable/gradient"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:id="@+id/constraintlayout">
    <!--tools:showIn="@layout/activity_create_project"-->

    <EditText
        android:id="@+id/date"
        android:layout_width="143dp"
        android:layout_height="45dp"
        android:layout_marginStart="233dp"
        android:layout_marginLeft="233dp"
        android:layout_marginTop="255dp"
        android:background="@drawable/radius_corners"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="date"
        android:paddingLeft="10dp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="81dp"
        android:layout_height="20dp"
        android:layout_marginStart="213dp"
        android:layout_marginLeft="213dp"
        android:layout_marginTop="229dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:text="End Date"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="320dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="74dp"
        android:layout_height="26dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="271dp"
        android:layout_marginRight="271dp"
        android:layout_marginBottom="468dp"
        android:text="Description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/DescriptionText"
        android:layout_width="355dp"
        android:layout_height="115dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/radius_corners"
        android:ems="10"
        android:inputType="textMultiLine"
        android:imeOptions="actionDone"
        android:paddingLeft="10dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="63dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:entries="@array/AddIndividualToList"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="338dp"
        android:spinnerMode="dialog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/DateTextView"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="264dp"
        android:layout_marginRight="264dp"
        android:text="Start Date"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="320dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/Date"
        android:layout_width="143dp"
        android:layout_height="45dp"
        android:layout_marginTop="255dp"
        android:background="@drawable/radius_corners"
        android:ems="10"
        android:inputType="date"
        tools:layout_editor_absoluteX="15dp"
        android:paddingLeft="10dp"
        android:imeOptions="actionDone"
        tools:layout_editor_absoluteY="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/ProjectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/radius_corners"
        android:ems="10"
        android:hint="Project Name"
        android:paddingLeft="10dp"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/DescriptionText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:text="Switch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <!--<com.google.android.gms.maps.MapView-->
        <!--android:layout_width="356dp"-->
        <!--android:layout_height="97dp"-->
        <!--android:layout_below="@+id/switch1"-->
        <!--android:layout_alignTop="@+id/Date"-->
        <!--android:layout_marginTop="130dp" />-->

</android.support.constraint.ConstraintLayout>